{
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--log-config",
                "log_config.ini"
            ],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python Debugger: File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\app\\main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Docker: Python - Fastapi",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "fastapi"
            }
        }
    ]
}